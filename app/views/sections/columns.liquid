    settings:
      text: "<p>blue</p>"
      color: blue
  - type: column
    settings:
      text: "<p>White</p>"
      color: white
  - type: column
    settings:
      text: "<p>Red</p>"
      color: red
---
{% include 'top' %}
  <div class="w3-row">
  {% for block in section.blocks | limit: 6 %}
    <div class="w3-col w3-padding m{% case forloop.length %}{% when 1 %}12{% when 2 %}6{% when 3 %}4{% when 4 %}3{% when 5 %}3{% when 6 %}2{% endcase %} w3-{{ block.settings.color }}">
      {{ block.settings.text }}
    </div>
  {% endfor %}
  </div>
{% include 'bot' %}
